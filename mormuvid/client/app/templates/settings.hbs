<div class="page-header">
    <h2>{{#link-to 'settings'}}Settings{{/link-to}}</h2>
</div>
<form role="form">
    {{#each message in errors.messages}}
    <div class="error">
        {{message}}
    </div>
    {{/each}}
    <div class="form-group">
        <label for="inputScoutedDailyQuota">Scouted Songs Daily Limit</label>
        {{input type="text" value=scoutedDailyQuota class="form-control" id="inputScoutedDailyQuota"}}
         <p class="help-block">Limits the number of songs mormuvid will automatically download per 24-hour period.</p>
    </div>
    {{x-woof}}
    <button class="btn" onclick="window.history.back()">Cancel</button>
    <button {{action "save"}} class="btn btn-primary">Save Settings</button>
</form>
